/* TOP 5 Fottball Players - The Guardian */

CREATE TABLE football_players
    (id INTEGER PRIMARY KEY AUTOINCREMENT,
    fullname TEXT,
    birthplace TEXT,
    birthday TEXT,
    height INTEGER,
    weight INTEGER);
    
CREATE TABLE fp_club
    (id INTEGER PRIMARY KEY AUTOINCREMENT,
    fp_id INTEGER,
    club TEXT,
    national_selection TEXT);
    
CREATE TABLE stats
    (id INTEGER PRIMARY KEY AUTOINCREMENT,
    fp_id INTEGER,
    position TEXT,
    retired TEXT);

